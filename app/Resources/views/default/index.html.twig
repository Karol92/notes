{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.3/css/mdb.min.css">
    <link href="{{ asset('assets/stylesheets/style.css') }}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/script.js') }}"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.3/js/mdb.min.js"></script>
{% endblock javascripts %}
{% block title %}Notes{% endblock %}
{% block body %}
    <h3>Notes</h3>
    <div class="container">
        <div class="toolbox">
            <ul class="toolbox-list">
                <li class="task" id="taskTag">Zadanie
                    <i class="glyphicon glyphicon-plus"> </i></li>
                <li class="question" id="questionTag">Pytanie
                    <i class="glyphicon glyphicon-plus"> </i></li>
                <li class="question-bool">Pytanie boolean
                    <i class="glyphicon glyphicon-plus"> </i></li>
            </ul>
        </div>
        <div class="container-notes">Zadania
            <ul>
                <div class="tasks">
                </div>
            </ul>
        </div>
        <div class="container-notes">Pytania
        </div>
        <div class="container-notes">Pytania/bool
        </div>
        <div class="modal">
            <form class="form">
                <i class="glyphicon glyphicon-remove close"></i>
                <p class="h5 text-center mb-4">Add Task</p>
                <div class="md-form">
                    <i class="fa fa-tag prefix grey-text"></i>
                    <input type="text" id="form32" class="form-control">
                    <label>Task Title</label>
                </div>
                <div class="md-form">
                    <i class="fa fa-pencil prefix grey-text"></i>
                    <textarea type="text" class="md-textarea" style="height: 100px"></textarea>
                    <label for="form8">Description:</label>
                </div>
                <div class="text-center">
                    <button class="btn btn-default">Add Task</button>
                </div>
            </form>
        </div>
    </div>


    <ul id="sortable1" class="connectedSortable">
        <div class="ui-state-default">Item 1</div>
        <div class="ui-state-default">Item 2</div>
        <div class="ui-state-default">Item 3</div>
        <div class="ui-state-default">Item 4</div>
        <div class="ui-state-default">Item 5</div>
    </ul>

    <ul id="sortable2" class="connectedSortable">
        <li class="ui-state-highlight">Item 1</li>
        <li class="ui-state-highlight">Item 2</li>
        <li class="ui-state-highlight">Item 3</li>
        <li class="ui-state-highlight">Item 4</li>
        <li class="ui-state-highlight">Item 5</li>
    </ul>



{% endblock %}
